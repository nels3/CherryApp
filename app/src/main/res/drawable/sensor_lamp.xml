<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="true" >
        <shape>
            <gradient
                android:startColor="@color/pink1"
                android:endColor="@color/pink1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black0" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/grey2"
                android:startColor="@color/grey2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black0" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:endColor="@color/grey05"
                android:startColor="@color/grey05"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black0" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>