<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/grey05"
                android:endColor="@color/grey05"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/pink1" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


    <item android:state_pressed="false">
        <shape>
            <gradient
                android:endColor="@color/pink1"
                android:startColor="@color/pinkbutton"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black0" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>